<!--index.wxml-->
<view class="container">
    <view class="tunnel">
      <text class="tunnel-text">出生日期与时间</text>
    </view>
    <view class="tunnel-text"> 
      <picker mode="date" value="{{date}}" start="2018-01-01" end="2999-09-01" bindchange="bindDateChange"> 
        <view class="picker"> 日期: {{date}} </view> 
      </picker>
    </view> 
    <view class="tunnel-text"> 
      <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChange"> 
        <view class="picker">时间 : {{time}} </view> 
      </picker> 
    </view> 
    <!-- 上传图片测试 -->
    <view class="uploader">
        <view class="uploader-text" bindtap="doUpload">
            <text>上传宝宝图片</text>
        </view>
        <view class="uploader-container" wx:if="{{imgUrl}}">
            <image
                class="uploader-image"
                src="{{imgUrl}}"
                mode="aspectFit"
                bindtap="previewImg"
            ></image>
        </view>
    </view>
    <!-- 上传图片测试 -->
    <view class="container">
        <view class="tunnel-text">  
            <button class="tunnel-text" formType="submit">提交</button>  
            <button class="tunnel-text" formType="reset">清空</button>  
        </view> 
    </view>
</view>
